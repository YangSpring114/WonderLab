										<Grid.ColumnDefinitions>
											<ColumnDefinition Width="1*" />
											<ColumnDefinition Width="0.10*" MaxWidth="15"/>
											<ColumnDefinition Width="Auto"/>
										</Grid.ColumnDefinitions>
										
